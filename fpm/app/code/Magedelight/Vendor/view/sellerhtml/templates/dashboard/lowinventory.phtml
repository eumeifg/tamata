                    </tr>
                    <?php
                    $i++;
                    if ($i==5) {
                        break;
                    }
                }
            } else {
                ?>
                <tr>
                    <td colspan="2"><?= __('No products with low inventory.') ?></td>
                </tr>
                <?php
            }
            ?>

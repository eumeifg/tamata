<script type="text/javascript">
    require([
        'jquery',
        'mage/calendar'
    ], function ($) {
        $(".grid-filter-clear-all").click(function () {
            $form = $(this).parents('form');
            $(':input:not([type=hidden])', $form).val("");
            $($form).submit();
        });

        $("#purchased_date_range").dateRange({
            buttonText: "<?= __('Select Date') ?>",
            showOn: "button",
            from: {
                id: "purchased_date_from"
            },
            to: {
                id: "purchased_date_to"
            }
        });

        $(".action-reset").click(function () {
            $form = $(this).parents('form');
            if ($(this).hasClass('search')) {
                $parent = $('.block-search', $form);
            } else {
                $parent = $('.filter-wrapper', $form);
            }
            $(':input:not([type=hidden])', $parent).val("");
            $('#session-clear-ordercomplete').val(1);
            $($form).submit();
        });

        $(document).ready(function () {
            $value = "false";
            $('input[type=text]').each(function () {
                var text_value = $(this).val();
                if (text_value != '')
                {
                    $value = "true";
                }
            });
            if ($('#search-order-input-completeorder')[0].value != "" || $value == "true") {
                $('#completeorder-msg span').html('<?= __("Your search result could not find.") ?>');
            } else {
                $('#completeorder-msg span').html("<?= __("We couldn't find any records.") ?>");
            }

            /*
             * Sorting feature
             */
            $completeSortOrder = $('#complete-sort-order').val();
            $completeSortDir = $('#complete-sort-direction').val();
            if ($completeSortOrder != null && $completeSortOrder != '') {
                $completeDirClass = ($completeSortDir == 'DESC') ? 'descend' : 'ascend';
                $('#complete-orders-table th[sortorder="' + $completeSortOrder + '"]').addClass($completeDirClass);
            }
            $sortDir = 'ASC';
            $('#complete-orders-table .sortable').click(function ($e) {
                $sortOrder = $(this).attr('sortorder');
                if ($completeSortOrder == $sortOrder) {
                    $sortDir = ($completeSortDir == 'DESC') ? 'ASC' : 'DESC';
                }
                $('#complete-sort-order').val($sortOrder);
                $('#complete-sort-direction').val($sortDir);
                $('#vendor-complete-order-search').submit();
            });
        });
    });
</script>
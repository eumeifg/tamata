        <column xsi:type="smallint" name="sort_order" nullable="true" unsigned="true" comment="Sort Order"/>
        <column xsi:type="text" name="brand_vendor" nullable="false" comment="Brand and Vendor"/>
        <column xsi:type="text" name="new_items_banner" nullable="true" comment="New Items Banner"/>

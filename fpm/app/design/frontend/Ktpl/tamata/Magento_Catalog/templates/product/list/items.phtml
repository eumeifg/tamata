                            loop:($(".owl-carousel .item").length > 4) ? true: false
                        },
                        1200:{
                            items:4,
                            loop:($(".owl-carousel .item").length > 4) ? true: false
                        }
                    }
                });
                carousel_status = 1;
            }
        });

        $(window).resize(function() {
            if ($(window).width() > tabletWidth) {
                if(!carousel_status) {
                    $(".owl-carousel").owlCarousel({
                        loop:($(".owl-carousel .item").length > 5) ? true: false,
                        nav:true,
                        dots: false,
                        rtl: true,
                        responsive:{

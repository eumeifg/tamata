<widgets xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Widget:etc/widget.xsd">
    <widget id="ktpl_product_slider" class="Ktpl\Productslider\Block\Widget\Slider">
        <label translate="true">Product Slider Widget</label>
        <description>Product Slider Widget</description>
        <parameters>
            <parameter name="slider" xsi:type="select" source_model="Ktpl\Productslider\Model\Config\Source\Slider" visible="true" required="true" sort_order="10" >
                <label translate="true">Slider</label>
            </parameter>
            <parameter name="template" xsi:type="select" visible="true" required="true" sort_order="20">
                <label translate="true">Template</label>
                <options>
                    <option name="default" value="widget/slider.phtml" selected="true">
                        <label translate="true">Default Template</label>
                    </option>
                </options>
            </parameter>
        </parameters>
    </widget>
</widgets>
                            },
                            600:{
                                items:3,
                                autoWidth: true,
                                loop:($(".owl-carousel .item").length >3) ? true: false
                            },
                            1000:{
                                items:4,
                                autoWidth: true,
                                loop:($(".owl-carousel .item").length > 4) ? true: false
                            },
                            1200:{
                                items:4,
                                loop:($(".owl-carousel .item").length > 4) ? true: false
                            }
                        }
                    });

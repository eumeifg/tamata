<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="page.main.title">
            <action method="setPageTitle">
                <argument translate="true" name="title" xsi:type="string">Guidelines</argument>
            </action>
        </referenceBlock>
        <referenceContainer name="content">
            <block class="Magento\Framework\View\Element\Template" name="rbshippingmatrix.guidelines" template="Magedelight_Shippingmatrix::guidelines.phtml" cacheable="false"/>
        </referenceContainer>
        <referenceBlock name="footer" remove="true" />
    </body>
</page>
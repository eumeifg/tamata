$categoryData = $block->getTopCategoryData();
$mode = 'grid';
?>
<div class="home-cate-slider">
	<?php if($categoryData->count()) : ?>
		<div class="carousel-container">
	        <div id="homecateslider" class="products-<?= $mode; ?> <?= $mode; ?> owl-carousel owl-theme">
				<?php
					foreach($categoryData as $key => $category) : ?>
						<div class="item">
		                   	<a id="<?= $category->getId()?>" name="<?= $category->getName()?>" data-toggle="tab" href="<?= $category->getUrl()?>" class="prod-img-box">
									<?php
									$_outputhelper = $this->helper('Magento\Catalog\Helper\Output');
									$_imgHtml = '';
									if ($category->getThumbnail()) {
										$_imgUrl = $block->getThumbnailImagePath($category->getThumbnail());
										$_imgHtml = '<img src="' . $_imgUrl . '" />';
										$_imgHtml = $_outputhelper->categoryAttribute($category, $_imgHtml, 'thumbnail');
										/* @escapeNotVerified */ echo $_imgHtml;
									}
									?>
									<span class="dealzone-details">
										<?= $block->escapeHtmlAttr(__($category->getName())) ?>
									</span>

								</a>
						</div>
					<?php endforeach; ?>
				</div>
			</div>
	<?php endif; ?>
</div>


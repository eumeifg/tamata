                                   $(this).attr('done','true');
                                    $(this).trigger('click');
                                }else{
                                   $(this).attr('done','false');
                                }
                            });
                        }
                    });
                    $("#crossclick").click(function(){
                        $("#apply").click();
                    });
                });
            });
    </script>

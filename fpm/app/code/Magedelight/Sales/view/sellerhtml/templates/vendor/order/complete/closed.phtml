<script type="text/javascript">
    require([
        'jquery',
        'mage/calendar',
    ], function ($) {
        $(".grid-filter-clear-all").click(function () {
            $form = $(this).parents('form');
            $(':input:not([type=hidden])', $form).val("");
            $($form).submit();
        });

        $("#purchased_date_range_closed").dateRange({
            buttonText: "<?= __('Select Date') ?>",
            showOn: "button",
            from: {
                id: "cpurchased_date_from"
            },
            to: {
                id: "cpurchased_date_to"
            }
        });

        $(".action-reset").click(function () {
            $form = $(this).parents('form');
            if ($(this).hasClass('search')) {
                $parent = $('.block-search', $form);
            } else {
                $parent = $('.filter-wrapper', $form);
            }
            $(':input:not([type=hidden])', $parent).val("");
            $('#session-clear-orderclosed').val(1);
            $($form).submit();
        });

        $(document).ready(function () {
            $value = "false";
            $('input[type=text]').each(function () {
                var text_value = $(this).val();
                if (text_value != '')
                {
                    $value = "true";
                }
            });
            if ($('#search-order-input-closedorder')[0].value != "" || $value == "true") {
                $('#closedorder-msg span').html('<?= __("Your search result could not find.") ?>');
            } else {
                $('#closedorder-msg span').html("<?= __("We couldn't find any records.") ?>");
            }

            /*
             * Sorting feature
             */
            $currentNewSortOrder = $('#closed-sort-order').val();
            $currentNewSortDir = $('#closed-sort-direction').val();
            if ($currentNewSortOrder != null && $currentNewSortOrder != '') {
                $sortNewDirClass = ($currentNewSortDir == 'DESC') ? 'descend' : 'ascend';
                $('#closed-orders-table th[sortorder="' + $currentNewSortOrder + '"]').addClass($sortNewDirClass);
            }
            $newSortDir = 'ASC';
            $('#closed-orders-table .sortable').click(function ($e) {
                $newSortOrder = $(this).attr('sortorder');
                if ($currentNewSortOrder == $newSortOrder) {
                    $newSortDir = ($currentNewSortDir == 'DESC') ? 'ASC' : 'DESC';
                }
                $('#closed-sort-order').val($newSortOrder);
                $('#closed-sort-direction').val($newSortDir);
                $('#vendor-closed-order-search').submit();
            });
        });
    });
</script>